<%= form_for @document, :html => { :multipart => true } do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :asset, "File" %>
    <%= f.file_field :asset %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
